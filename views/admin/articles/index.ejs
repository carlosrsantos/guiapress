<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <h2>Artigos</h2>
    <a class="btn btn-success" href="/admin/articles/new">Criar novo artigo</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Categoria</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
           <% articles.forEach(article => { %>
            <tr>
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= article.slug %></td>
                <td>
                    <% if(!article.categoryId) { %>
                            
                        <% }else{ %>
                            <%= article.category.title %>
                        <% } %>           
                </td>
                <td>
                    <a class="btn btn-warning" style="display: inline;" href="/admin/articles/edit/<%= articles.id %>">Editar</a>
                    <form method="POST" action="/articles/delete" style="display: inline;" onsubmit="confirmDeleting(event, this)">
                        <input type="hidden" name="id" value="<%= article.id %>">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>                
            <% }) %> 
        </tbody>
    </table>
</div>

<%- include ('../../partials/footer.ejs') %>
<script>
    function confirmDeleting(event, form) {
        event.preventDefault();
        var decision = confirm("Deseja realmente deletar este artigo?");
        if (decision) {
            form.submit();
        }
    }
</script>