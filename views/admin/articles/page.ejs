<body>
    <div class="container">
        <hr>
        <% result.articles.rows.forEach(article => { %>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"><%= article.title %></h3>
            </div>

            <div class="card-body">
                <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
            </div>
        </div>
        <br>
        <% }) %>

        <div class="row">
            <div class="col col-12">

                <% if(result.page > 2) { %>
                    <a style="float: left;" href="/articles/page/<%= result.page -1 %>" ><<< Anterior</a>
                <% } else if(result.page == 2) { %>
                     <a style="float: left;" href="/" ><<< Anterior</a>  
                <% } %>


                <% if(result.next) { %>
                    <a style="float: right;" href="/articles/page/<%= result.page +1 %>">PrÃ³ximo >>></a>
                <% } %>
            </div>
        </div>
        <hr>
    </div>
</body>

