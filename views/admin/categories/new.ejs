<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Cadastro de categoria</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/categories/save">
                <input class="form-control" type="text" name="title" placeholder="Defina o título da categoria">
                <br>
                <button name="insert" class="btn btn-success">Cadastrar</button>
            </form>
        </div>
    </div>
</div>

<%- include ('../../partials/footer.ejs') %>
<script>
    var title = document.querySelector('input[name=title]');
    var btn = document.querySelector('button[name=insert]');

    btn.onclick = function () {
        if (title.value == "") {
            alert("Esse campo não pode ser vazio!");
            title.focus();
            return false;
        }
    }
</script>
